{
  "family": "api-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::753591596815:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "api-service",
      "image": "REPLACE_IMAGE",
      "essential": true,
      "dependsOn": [
        {
          "containerName": "nats",
          "condition": "START"
        }
      ],
      "portMappings": [
        { "containerPort": 8000, "protocol": "tcp" }
      ],
      "healthCheck": {
        "command": [
          "CMD",
          "nats",
          "--version"
        ]
      },
      "environment": [
        { "name": "DATABASE_URL",  "value": "postgresql://postgres:postgres@postgres:5432/greenhouse" },
        { "name": "SEED_MOCK_DATA", "value": "true" },
        { "name": "JWT_SECRET",     "value": "dev-secret-change-me" },
        { "name": "NATS_URL",       "value": "nats://127.0.0.1:4222" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group":         "/ecs/api-service",
          "awslogs-region":        "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "nats",
      "image": "nats:latest",
      "essential": false,
      "portMappings": [
        { "containerPort": 4222, "protocol": "tcp" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group":         "/ecs/api-service",
          "awslogs-region":        "eu-north-1",
          "awslogs-stream-prefix": "nats"
        }
      }
    }
  ]
}
