{
  "family": "tcp-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::753591596815:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "tcp-service",
      "image": "REPLACE_IMAGE",
      "essential": true,
      "portMappings": [
        { "containerPort": 9000, "protocol": "tcp" }
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:postgres@postgres:5432/greenhouse"
        },
        {
          "name": "DEVICE_HOST",
          "value": "192.168.159.209"
        },
        {
          "name": "DEVICE_PORT",
          "value": "9000"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/tcp-service",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
